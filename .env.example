# Environment Configuration for NeuralTrade
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://admin:neuraltrade_secure_2026@localhost:27017/neuraltrade?authSource=admin
MONGODB_DB_NAME=neuraltrade

INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=neuraltrade-influx-token-change-me
INFLUXDB_ORG=neuraltrade
INFLUXDB_BUCKET=market_data

REDIS_URL=redis://localhost:6379

# ===========================================
# MESSAGE BROKER
# ===========================================
RABBITMQ_URL=amqp://neuraltrade:neuraltrade_rmq_2026@localhost:5672
RABBITMQ_EXCHANGE=neuraltrade.events
RABBITMQ_QUEUE_PRICES=prices.ingest
RABBITMQ_QUEUE_SIGNALS=signals.ml

# ===========================================
# SECURITY & ENCRYPTION
# ===========================================
# AES-256 encryption key (32 bytes hex encoded)
AES_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# ===========================================
# EXCHANGE API KEYS (User-specific, encrypted)
# ===========================================
# These are placeholders - actual keys stored encrypted in MongoDB
# BINANCE_API_KEY=
# BINANCE_API_SECRET=

# ===========================================
# ML ENGINE
# ===========================================
ML_ENGINE_URL=http://localhost:8000
ML_CONFIDENCE_THRESHOLD=0.85
ML_MODEL_PATH=/models/signal_predictor_v1.pt

# ===========================================
# SERVICE PORTS
# ===========================================
INGESTION_PORT=3001
API_GATEWAY_PORT=3000
ML_ENGINE_PORT=8000
DASHBOARD_PORT=3100

# ===========================================
# ENVIRONMENT
# ===========================================
NODE_ENV=development
LOG_LEVEL=debug
